@model IEnumerable<Cinema.Dominio.INGRESSO>

@{
    ViewBag.Title = "Ingressos";
}

<h2>Ingressos</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CLIENTE.Nome_Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TIPO_INGRESSO.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FILME.Nome_Filme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SESSAO.Data_Sessao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SESSAO.Horario_Sessao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SALA.Nome_Sala)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Venda)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CLIENTE.Nome_Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPO_INGRESSO.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FILME.Nome_Filme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SESSAO.Data_Sessao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SESSAO.Horario_Sessao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SALA.Nome_Sala)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_Venda)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { Id_Ingresso = item.Id_Ingresso }) |
            @Html.ActionLink("Excluir", "Excluir", new { Id_Ingresso = item.Id_Ingresso })
        </td>
    </tr>
}

</table>
